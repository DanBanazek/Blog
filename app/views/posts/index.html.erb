<h1>Recent Posts</h1>
<table>
<tr>
<th>Title</th>
<th>Text</th>
<th></th>
<th></th>
<% @posts.each do |post|%>
<tr>
<td><%= link_to post.title, post%></td>
<td><%= post.text%></td>
<td><%= link_to 'Edit', edit_post_path(post)%></td>
<td><%= link_to 'Delete', post_path(post), method: :delete, data:{confirm: 'Are you sure?'} %></td>
</tr>
<% end %>
</table>
<br>
<%=link_to 'New post', new_post_path%>